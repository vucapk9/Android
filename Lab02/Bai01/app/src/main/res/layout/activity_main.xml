<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Fahrenheit Input -->
    <EditText
        android:id="@+id/edtFahrenheit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fahrenheit"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <!-- Celsius Input -->
    <EditText
        android:id="@+id/edtCelsius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Celsius"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <!-- Convert to Celsius -->
        <Button
            android:id="@+id/btnToCelsius"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Convert to Celsius"
            android:minWidth="120dp"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <!-- Convert to Fahrenheit -->
        <Button
            android:id="@+id/btnToFahrenheit"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="Convert to Fahrenheit"
            android:minWidth="120dp"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <!-- Clear -->
        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:text="Clear"
            android:minWidth="80dp"
            android:minHeight="48dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />
    </LinearLayout>
</LinearLayout>
